<body>
  <div class="pwa-indicator" id="pwaIndicator" style="display: none;">
    PWA Ready
  </div>
  
  <div class="loading-container" id="loadingContainer">
    <div class="logo">Mewayz</div>
    <div class="loading-spinner"></div>
    <div class="loading-text">Loading Business Platform...</div>
    <div class="status-text" id="statusText">Initializing PWA features...</div>
    
    <div class="features-list">
      <ul>
        <li>Social Media Management</li>
        <li>Bio Sites & Link Management</li>
        <li>CRM & Lead Management</li>
        <li>Email Marketing</li>
        <li>E-commerce Integration</li>
        <li>Analytics & Reporting</li>
        <li>Course Management</li>
        <li>Offline Functionality</li>
      </ul>
    </div>
  </div>
  
  <div class="error-container" id="errorContainer">
    <div class="error-title">Loading Error</div>
    <div class="error-message" id="errorMessage">
      The app is taking longer than expected to load. This might be due to a slow connection or a temporary issue.
    </div>
    <button class="retry-button" onclick="retryLoad()">Retry</button>
  </div>
  
  <script>
    let loadingStage = 0;
    const stages = [
      'Initializing PWA features...',
      'Registering service worker...',
      'Loading application core...',
      'Preparing offline features...',
      'Almost ready...'
    ];
    
    function updateLoadingStage() {
      const statusText = document.getElementById('statusText');
      if (loadingStage < stages.length) {
        statusText.textContent = stages[loadingStage];
        loadingStage++;
        setTimeout(updateLoadingStage, 2000);
      }
    }
    
    // Show error after 20 seconds if app doesn't load
    setTimeout(() => {
      if (document.getElementById('loadingContainer').style.display !== 'none') {
        document.getElementById('loadingContainer').style.display = 'none';
        document.getElementById('errorContainer').style.display = 'block';
      }
    }, 20000);
    
    function retryLoad() {
      document.getElementById('errorContainer').style.display = 'none';
      document.getElementById('loadingContainer').style.display = 'block';
      loadingStage = 0;
      updateLoadingStage();
      location.reload();
    }
    
    // PWA Service Worker Registration
    if ('serviceWorker' in navigator) {
      window.addEventListener('load', function() {
        // Register our custom PWA service worker
        navigator.serviceWorker.register('/sw.js')
          .then(function(registration) {
            console.log('PWA Service Worker registered successfully');
            document.getElementById('pwaIndicator').style.display = 'block';
            document.getElementById('statusText').textContent = 'PWA features activated';
          })
          .catch(function(error) {
            console.log('Service Worker registration failed:', error);
            document.getElementById('statusText').textContent = 'PWA features unavailable';
          });
      });
      
      // Register Flutter service worker
      window.addEventListener('flutter-first-frame', function () {
        navigator.serviceWorker.register('flutter_service_worker.js')
          .then(function(registration) {
            console.log('Flutter Service Worker registered successfully');
            // Hide loading screen once Flutter is ready
            document.getElementById('loadingContainer').style.display = 'none';
          })
          .catch(function(error) {
            console.log('Flutter Service Worker registration failed:', error);
          });
      });
    }

    // Install prompt handling
    let deferredPrompt;
    window.addEventListener('beforeinstallprompt', function(e) {
      e.preventDefault();
      deferredPrompt = e;
      console.log('Install prompt available');
      
      // Show install hint
      const statusText = document.getElementById('statusText');
      statusText.innerHTML = 'PWA ready - Install available! <button style="background:#4ECDC4;color:#101010;border:none;padding:4px 8px;border-radius:4px;font-size:12px;cursor:pointer;" onclick="installApp()">Install</button>';
    });

    // App installed handler
    window.addEventListener('appinstalled', function() {
      console.log('Mewayz PWA installed');
      document.getElementById('pwaIndicator').textContent = 'PWA Installed';
      deferredPrompt = null;
    });
    
    // Install app function
    function installApp() {
      if (deferredPrompt) {
        deferredPrompt.prompt();
        deferredPrompt.userChoice.then(function(choiceResult) {
          if (choiceResult.outcome === 'accepted') {
            console.log('User accepted the install prompt');
          } else {
            console.log('User dismissed the install prompt');
          }
          deferredPrompt = null;
        });
      }
    }
    
    // Start loading stages
    updateLoadingStage();
    
    // Simulate app loading progress
    setTimeout(() => {
      document.getElementById('statusText').textContent = 'Connecting to backend...';
    }, 5000);
    
    setTimeout(() => {
      document.getElementById('statusText').textContent = 'Loading user interface...';
    }, 8000);
    
    setTimeout(() => {
      document.getElementById('statusText').textContent = 'Preparing dashboard...';
    }, 12000);
    
    // For demonstration, redirect to main app after 15 seconds
    setTimeout(() => {
      if (window.location.pathname === '/app' || window.location.pathname === '/mobile') {
        // In a real implementation, this would load the actual Flutter app
        window.location.href = '/flutter.html';
      }
    }, 15000);
  </script>
  
  <script src="flutter_bootstrap.js" async></script>
</body>
